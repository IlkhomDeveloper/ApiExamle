<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="150dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cardView"
        android:layout_height="match_parent">

        <View
            android:id="@+id/planPriorityLeft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#2E7D32"
            android:layout_width="8dp"
            android:layout_height="0dp"/>
        <View
            android:id="@+id/planPriorityRight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#2E7D32"
            android:layout_width="8dp"
            android:layout_height="0dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mainPicture"
            android:layout_marginLeft="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/planPriorityLeft"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            app:layout_constraintVertical_chainStyle="packed"
            android:id="@+id/userName"
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:text="@string/app_name"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/userPhone"
            app:layout_constraintTop_toTopOf="@id/mainPicture"
            app:layout_constraintRight_toRightOf="@id/guidLineThird"
            app:layout_constraintLeft_toRightOf="@id/mainPicture"/>
        <TextView
            android:id="@+id/userPhone"
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:text="@string/app_name"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/userName"
            app:layout_constraintRight_toRightOf="@id/guidLineThird"
            app:layout_constraintBottom_toBottomOf="@id/mainPicture"
            app:layout_constraintLeft_toRightOf="@id/mainPicture"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidLineFirst"
            app:layout_constraintGuide_percent="0.1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidLineThird"
            app:layout_constraintGuide_percent="0.9"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidLineSecond"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>